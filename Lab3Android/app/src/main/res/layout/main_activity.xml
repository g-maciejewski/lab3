<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.design.widget.AppBarLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/ivCube"
        android:layout_width="137dp"
        android:layout_height="148dp"
        android:layout_weight="0.28"
        app:srcCompat="@drawable/dice2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintVertical_bias="0.202" />

    <ImageView
        android:id="@+id/ivCube2"
        android:layout_width="137dp"
        android:layout_height="148dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.714"
        app:layout_constraintLeft_toRightOf="@+id/ivCube"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="0.202"
        app:srcCompat="@drawable/dice4" />

    <TextView
        android:id="@+id/tvSuma"
        android:layout_width="198dp"
        android:layout_height="57dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/default_font_size"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/tvSum"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvSum"
        app:layout_constraintVertical_bias="0.8" />

    <TextView
        android:id="@+id/tvSum"
        android:layout_width="128dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Suma:"
        android:visibility="visible"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.981" />

    <TextView
        android:id="@+id/tvMaxDots"
        android:layout_width="254dp"
        android:layout_height="30dp"
        android:text="@string/max_dots_number"
        android:layout_marginTop="8dp"
        android:textSize="@dimen/notDefault_font_size"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ivCube"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/appBarLayout"
        app:layout_constraintHorizontal_bias="0.264"
        app:layout_constraintVertical_bias="0.333" />

    <TextView
        android:id="@+id/tvMaxDotsNumber"
        android:layout_width="30dp"
        android:layout_height="52dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="6"
        android:textSize="@dimen/default_font_size"
        app:layout_constraintBottom_toTopOf="@+id/ivCube2"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintLeft_toRightOf="@+id/tvMaxDots"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivCube3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:srcCompat="@drawable/dice2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCube"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.144"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ivCube4"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.416" />

    <ImageView
        android:id="@+id/ivCube4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:srcCompat="@drawable/dice4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ivCube2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.145"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.928" />
</android.support.constraint.ConstraintLayout>